<section>
  <%= turbo_frame_tag dom_id(game, :current_phase_section) do %>
    <%= render CardComponent.new do %>
      <div class="flex flex-col gap-y-8">
        <h2 class="text-normal uppercase tracking-wide text-gray-600">
          <%= t("games.beatle.shared.your_playlist_status") %>
        </h2>

        <div class="flex justify-center">
          <%= render Player::Beatle::InlineStatusComponent.new(player:, class: "h-8 w-8") %>
        </div>

        <div class="flex gap-x-4">
          <div class="w-full">
            <%= link_to t("games.beatle.shared.buttons.show_playlist"), game_beatle_playlist_path(game), class: "button" %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</section>
