<% content_for :navigation do %>
  <%= render "navigation" %>
<% end %>

<div class="px-8 flex flex-col gap-y-8">
  <h1 class="text-5xl mb-8"><%= t("shared.my_games") %></h1>

  <div class="flex flex-col gap-y-8">
    <%= render partial: "list_item", collection: @game_instances, as: :game_instance %>
  </div>

  <%= link_to games_path, class: "w-full rounded-xl bg-indigo-600 text-white transition text-xl py-4 flex items-center gap-x-2 justify-center transition hover:bg-indigo-500" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6" />
    </svg>

   <%= t(".new_game") %>
  <% end %>
</div>
