<div class="p-8 flex flex-col gap-y-8">
  <h1 class="text-5xl mb-8"><%= t(".sign_in") %></h1>

  <%= render CardComponent.new do %>
    <%= form_with(model: @form, url: session_path, class: "flex flex-col") do |f| %>
      <div class="flex flex-col gap-y-4">
        <div class="flex flex-col">
          <%= f.label :token, class: "label" %>
          <%= f.text_field :token, class: "input", placeholder: t(".token") %>
          <%= render Forms::FieldErrorsComponent.new(f.object, :token) %>
        </div>
        <%= f.submit t("shared.buttons.join_games"), class: "button" %>
      </div>
    <% end %>
  <% end %>
</div>
