<section>
  <div class="border-8 bg-white border-indigo-600 rounded-lg border-t-2 border-l-2 p-4">
    <div class="flex flex-col gap-y-8">
      <h2 class="text-3xl font-bold uppercase text-indigo-700"><%= game.name %></h2>
      <p class="text-xl tracking-wide"><%= game.description %></p>
      <%= turbo_frame_tag :game do %>
        <%= link_to t(".start_this_game"), new_game_instance_path(game), class: "button" %>
      <% end %>
    </div>
  </div>
</section>
