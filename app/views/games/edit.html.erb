<% content_for :navigation do %>
  <%= render Links::BackToComponent.new(game_path(@game), t("games.shared.back_to_game")) %>
<% end %>

<div class="px-8 flex flex-col gap-y-8">
  <div class="fle flex-col gap-y-2">
    <h1 class="text-5xl mb-8"><%= t("games.shared.edit_game") %></h1>
  </div>

  <%= render CardComponent.new do %>
    <%= turbo_frame_tag @game, :edit do %>
      <%= form_with(model: @game.becomes(Game)) do |f| %>
        <div class="flex flex-col gap-y-4">
          <fieldset class="flex flex-col">
            <%= f.label :group_name, class: "label", error_class: "" %>
            <%= f.text_field :group_name, class: "input" %>
            <%= render Forms::FieldErrorsComponent.new(f.object, :group_name) %>
          </fieldset>

          <%= f.submit t("games.shared.update_game"), class: "button" %>

          <%= link_to t("shared.buttons.i_meant_to_do_something_else"), game_path(@game), class: "ghost-button" %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
