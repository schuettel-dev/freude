<div class="p-8 sm:p-0 flex flex-col gap-y-8">
  <h1 class="text-5xl"><%= t(".start_new_game") %></h1>

  <div class="border-8 border-indigo-600 rounded-lg border-t-2 border-l-2 p-4">
    <%= turbo_frame_tag :game do %>
      <div class="flex flex-col gap-y-4">
        <%= form_with(model: @game_instance.becomes(GameInstance)) do |f| %>
          <div class="flex flex-col gap-y-4">
            <%= f.label :group_name, class: "label" %>
            <%= f.text_field :group_name, class: "input", placeholder: GameInstance.human_attribute_name(:group_name) %>
            <%= f.submit t(".ready"), class: "button" %>
          </div>
        <% end %>
        <%= link_to t("shared.buttons.i_changed_my_mind"), games_path, class: "text-center text-gray-400 py-2 bg-white rounded-lg hover:bg-gray-100 hover:text-gray-500 transition" %>
      </div>
    <% end %>
  </div>
</div>
