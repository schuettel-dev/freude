<% content_for :navigation do %>
  <%= render Links::BackToComponent.new(game_path(@playlist.game), t("games.beatle.shared.buttons.back_to_game")) %>
<% end %>

<div class="px-8 flex flex-col gap-y-8">
  <h1 class="text-5xl mb-8"><%= t("games.beatle.shared.my_playlist") %></h1>

  <div>
    <%= turbo_frame_tag dom_id(@playlist) do %>
      <%= render Games::Beatle::Playlist::EditComponent.new(playlist: @playlist) %>
    <% end %>
  </div>
</div>
