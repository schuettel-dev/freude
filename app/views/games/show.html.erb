<% content_for :navigation do %>
  <%= render Links::BackToComponent.new(root_path, t("shared.buttons.back_to_dashboard")) %>
<% end %>

<div class="px-8 flex flex-col gap-y-8">
  <h1 class="text-5xl mb-8"><%= @game.group_name %></h1>

  <section>
    <%= render CardComponent.new(padding: false) do %>
      <div class="flex flex-col gap-y-4">
        <h2 class="pt-4 px-4 text-xl uppercase tracking-wide text-gray-600">
          <%= t("shared.phases", count: 2) %>
        </h2>

        <%= render Games::PhaseDescriptionComponent.new(game: @game, user: Current.user) %>
      </div>
    <% end %>
  </section>

  <%= render Games::PlayersSectionComponent.new(game: @game, user: Current.user) %>

  <%= render Games::AdminSectionComponent.new(game: @game, user: Current.user) %>
</div>
